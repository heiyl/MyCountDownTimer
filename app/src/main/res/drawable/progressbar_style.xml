<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 进度条背景色 -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/backgroud_color"
                android:endColor="@color/backgroud_color"
                android:startColor="@color/backgroud_color" />
        </shape>
    </item>
    <!-- 第二进度背景色 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/app_little_color"
                    android:endColor="@color/app_little_color"
                    android:startColor="@color/app_little_color" />
            </shape>
        </clip>
    </item>
    <!-- 第一进度背景色-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="@color/app_main_color"
                    android:endColor="@color/app_main_color"
                    android:startColor="@color/app_main_color" />
            </shape>
        </clip>
    </item>
</layer-list>